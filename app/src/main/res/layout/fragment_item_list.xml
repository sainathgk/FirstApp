<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.sainath.firstapp.ItemFragment">

    <ListView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="match_parent" android:animateLayoutChanges="true"
        android:divider="@android:drawable/divider_horizontal_dark" android:dividerHeight="2px"
        android:choiceMode="multipleChoiceModal"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:longClickable="false" />

    <TextView android:id="@android:id/empty" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" />

</FrameLayout>
